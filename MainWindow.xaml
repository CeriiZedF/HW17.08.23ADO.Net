<Window x:Class="HW17._08._23ADO.Net.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW17._08._23ADO.Net"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center" Orientation="Vertical">
            <Button 
        x:Name="CreateGroup" 
        Click="CreateGroup_Click">
                Create Table Group
            </Button>
            <Button 
        x:Name="InsertGroup" 
        Click="InsertGroup_Click">
                Insert Table Group
            </Button>
            <Button 
        x:Name="GroupCount" 
        Click="GroupCount_Click">
                Group Count Click
            </Button>

        </StackPanel>
    </Grid>
</Window>
